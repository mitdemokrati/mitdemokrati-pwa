{
  "name": "mitdemokrati-pwa",
  "version": "0.1.0",
  "browser": "./dist/index.html",
  "server": "./dist/prefetcher.js",
  "author": "Andreas Goodstein <andreasgoodstein@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "parcel ./src/index.html",
    "build": "parcel build --target=browser ./src/index.html",
    "build:analyze": "cross-env PARCEL_BUNDLE_ANALYZER=1 parcel build --target=browser ./src/index.html",
    "build:prefetcher": "parcel build --target=server ./src/prefetcher.ts",
    "lint": "npm-run-all -p lint:prettier lint:es lint:style",
    "lint:es": "eslint . --ext .ts,.tsx",
    "lint:prettier": "prettier -c .",
    "lint:style": "stylelint **/*.less",
    "test": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm-run-all -p build test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint",
      "prettier -c"
    ],
    "*.less": "stylelint"
  },
  "source": [
    "./src/prefetcher.ts",
    "./src/index.html"
  ],
  "targets": {
    "browser": {
      "context": "browser",
      "engines": {
        "browsers": [
          "last 3 versions",
          "not dead",
          "not ie <= 11",
          "not < 1%"
        ]
      }
    },
    "server": {
      "context": "node",
      "engines": {
        "node": "12.x"
      }
    }
  },
  "dependencies": {
    "axios": "^0.19.2",
    "axios-retry": "^3.1.8",
    "lodash": "^4.17.19",
    "lz-string": "^1.4.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-virtuoso": "^0.17.7",
    "recharts": "^2.0.0-beta.6",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^10.3.0",
    "@testing-library/react-hooks": "^3.3.0",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.158",
    "@types/lz-string": "^1.3.34",
    "@types/react": "^16.9.38",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "jest-transform-stub": "^2.0.0",
    "less": "^3.11.3",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "parcel": "2.0.0-beta.1",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.5"
  }
}
